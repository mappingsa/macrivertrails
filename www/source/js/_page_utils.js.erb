// Get the URL parameters
getUrlVars = function()
  {
  var vars = [],
      hash,
      i,
      url = $page.data("url"),
      hashes = url.toLowerCase().slice(url.indexOf("?") + 1).split("&");
  for(i = 0; i < hashes.length; i++) {
    hash = hashes[i].split("=");
    vars.push(hash[0]);
    vars[hash[0]] = hash[1];
    }
  return vars;
  }