<% r = current_resource %>
$buildTarget: '<%= build_target %>';
$baseURI: '<%= base_uri %>';
$imagePath: '<%= base_uri ? (base_uri + 'images/') : '../images/' %>';
$typePath: 'type/';

/*
    build_target: '#{$buildTarget}',
    base_uri: '#{$baseURI}',
    image_path: '#{$imagePath}'
*/

@function imageUrl($path) {
  @return url('#{$imagePath}#{$path}')
}

@function typeUrl($path) {
  @return url('#{$typePath}#{$path}')
}