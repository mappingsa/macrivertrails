<?xml version='1.0' encoding='utf-8'?>

<widget id="com.msa.macriverTRAILS" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>macriverTRAILS</name>

    <description>
        Macquarie River Trails
    </description>

    <author email="Jayme Peltz <jayme@mappingsa.com.au>" href="http://www.mappingsa.com.au">
        Mapping Services Australia
    </author>

    <content src="index.html" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <engine name="ios" spec="~4.0.1" />
    <engine name="android" spec="~5.1.1" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.1.0" />

</widget>
